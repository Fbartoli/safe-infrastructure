# =============================================================================
# Safe Infrastructure - Coolify Environment Variables
# =============================================================================
# Copy this to Coolify's Environment Variables section or create a .env file
# All variables with defaults can be omitted - only set what you need to change
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED: Blockchain Configuration
# -----------------------------------------------------------------------------

# RPC endpoint for the blockchain you're indexing
RPC_NODE_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY

# -----------------------------------------------------------------------------
# REQUIRED: Security Secrets (generate unique values!)
# -----------------------------------------------------------------------------

# Django secret key - generate with: openssl rand -base64 32
DJANGO_SECRET_KEY=CHANGE_ME_generate_with_openssl_rand_base64_32

# Token for Config Service <-> Client Gateway communication
# Must match between services - generate with: openssl rand -base64 32
CGW_AUTH_TOKEN=CHANGE_ME_generate_with_openssl_rand_base64_32

# Database password for all Postgres instances
POSTGRES_PASSWORD=CHANGE_ME_secure_password

# Admin credentials for Django admin panels
ADMIN_USERNAME=root
ADMIN_PASSWORD=CHANGE_ME_admin_password
ADMIN_EMAIL=admin@yourdomain.com

# -----------------------------------------------------------------------------
# REQUIRED: Public URL Configuration
# -----------------------------------------------------------------------------

# The public URL where your Safe instance will be accessible
# Coolify will set this via SERVICE_FQDN_NGINX, but you can override
PUBLIC_URL=https://safe.yourdomain.com

# CSRF trusted origins - must include your public URL
CSRF_TRUSTED_ORIGINS=https://safe.yourdomain.com

# Media URL for uploaded files
MEDIA_URL=https://safe.yourdomain.com/cfg/media/

# -----------------------------------------------------------------------------
# OPTIONAL: Service Versions
# -----------------------------------------------------------------------------

# Pin versions for stability, or use 'latest' for development
CFG_VERSION=latest
CGW_VERSION=latest
TXS_VERSION=latest
UI_VERSION=latest
EVENTS_VERSION=latest

# Internal nginx port (Coolify's Traefik handles external routing)
REVERSE_PROXY_PORT=8000

# -----------------------------------------------------------------------------
# OPTIONAL: External Services
# -----------------------------------------------------------------------------

# Infura token for UI wallet connections
INFURA_TOKEN=

# Tenderly for transaction simulation
TENDERLY_ORG=
TENDERLY_PROJECT=
TENDERLY_SIMULATE_URL=
